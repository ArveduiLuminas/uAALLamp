<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="gae.eu.bletester.LightActivity">

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ON/OFF"
        android:id="@+id/onoff"
        android:checked="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/red"
        android:layout_below="@+id/onoff"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:text="red" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/green"
        android:layout_below="@+id/red"
        android:layout_centerHorizontal="true"
        android:text="green" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/blue"
        android:layout_below="@+id/green"
        android:layout_centerHorizontal="true"
        android:text="blue" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Color Command"
        android:id="@+id/command"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/warm"
        android:text="Warm Intensity"
        android:layout_below="@+id/command"
        android:layout_alignStart="@+id/blue" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Warm Command"
        android:id="@+id/warm_command"
        android:layout_below="@+id/warm"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/Message_de_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/warm_command"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp"
        android:text="TextView" />
</RelativeLayout>
